<%= form_for @daily_deal, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :DealerName, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :DealerName, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :DealerID, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :DealerID, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :DealerType, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :DealerType, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :IsDealerFavorite, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :IsDealerFavorite, :class => 'check_box' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :targeturl, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :targeturl, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                daily_deals_path, :class => 'btn' %>
  </div>
<% end %>
