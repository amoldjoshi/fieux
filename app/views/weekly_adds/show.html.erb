<%- model_class = WeeklyAdd -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:WeeklyAddName) %>:</strong></dt>
  <dd><%= @weekly_add.WeeklyAddName %></dd>
  <dt><strong><%= model_class.human_attribute_name(:WeeklyAddID) %>:</strong></dt>
  <dd><%= @weekly_add.WeeklyAddID %></dd>
  <dt><strong><%= model_class.human_attribute_name(:WeeklyAddType) %>:</strong></dt>
  <dd><%= @weekly_add.WeeklyAddType %></dd>
  <dt><strong><%= model_class.human_attribute_name(:IsWeeklyFavorite) %>:</strong></dt>
  <dd><%= @weekly_add.IsWeeklyFavorite %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              weekly_adds_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_weekly_add_path(@weekly_add), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              weekly_add_path(@weekly_add),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
