<%= form_for @weekly_add, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :WeeklyAddName, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :WeeklyAddName, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :WeeklyAddID, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :WeeklyAddID, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :WeeklyAddType, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :WeeklyAddType, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :IsWeeklyFavorite, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :IsWeeklyFavorite, :class => 'check_box' %>
    </div>
  </div>
  
    <div class="control-group">
    <%= f.label :targeturl, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :targeturl, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                weekly_adds_path, :class => 'btn' %>
  </div>
<% end %>
