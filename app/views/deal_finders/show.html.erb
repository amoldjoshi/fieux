<%- model_class = DealFinder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:FinderName) %>:</strong></dt>
  <dd><%= @deal_finder.FinderName %></dd>
  <dt><strong><%= model_class.human_attribute_name(:FinderID) %>:</strong></dt>
  <dd><%= @deal_finder.FinderID %></dd>
  <dt><strong><%= model_class.human_attribute_name(:FinderType) %>:</strong></dt>
  <dd><%= @deal_finder.FinderType %></dd>
  <dt><strong><%= model_class.human_attribute_name(:IsFinderFavorite) %>:</strong></dt>
  <dd><%= @deal_finder.IsFinderFavorite %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              deal_finders_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_deal_finder_path(@deal_finder), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              deal_finder_path(@deal_finder),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
